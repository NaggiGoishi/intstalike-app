<% provide(:title, @user.name) %>

<div class="showbox">
  <div class="userbox">
    <% if @user.image? %>
      <%= image_tag @user.image.url(:square) %>
    <% end %>
    <p><%= @user.name %></p>
    <p>フォロー、フォロワー</p>
    <p>自己紹介</p>

    <% if user_signed_in? %>
      <%= link_to "プロフィール編集", edit_user_registration_path %>
    <% end %>
  </div>

  <div class="user_postbox">
    <div class="imagbox">
    <% @user.posts.each do |post| %>
      <tr>
        <td>
          <%= link_to post_path do %>
          <%= image_tag post.image_url(:thumb100).to_s %>
          <% end %>
        </td>
      </tr>
    <% end %>
    <% @user.liked_posts.each do |post| %>
      <%= post.user.email %>
      <%= post.content %>
    <% end %>
    </div>
  </div>
</div>
